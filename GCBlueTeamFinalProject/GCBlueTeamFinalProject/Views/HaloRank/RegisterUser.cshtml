<body>

    @{
        ViewData["Title"] = "RegisterUser";
        Layout = "~/Views/HaloRank/_RegisterUserLayout.cshtml";
    }

    <h1>Profile Registration</h1>

    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>

    }

    <h6>Welcome to the Halo Rankings App! Before you get started we just need a bit more information.</h6> <br />

    <form action="../HaloRank/CreateProfile" method="post" style="max-width:555px" >
        @*Profile Image
            <input type="image" name="Images" value="" /><br /><br />*@
        <div class="form-group">
            <label for="gamertaginput">Enter your gamertag, or try "<b>Spectacle</b>" if you don't have one</label>
            <input type="text" class="form-control" name="Gamertag" value="" id="gamertaginput" placeholder="Gamertag" required />
        </div>
        <div class="form-group">
            <label for="nameinput">Name</label>
            <input type="text" class="form-control" name="UserName" value="" id="nameinput" placeholder="Name" required />
        </div>
        <div class="form-group">
            <label for="dateinput">Birthday</label>
            <input type="date" class="form-control" name="DoB" value="" id="dateinput" />
        </div>
        <div class="form-group">
            <label for="genderinput">Species</label>
            <select class="form-control" name="Gender" id="genderinput">
                <option>Human</option>
                <option>Grunt</option>
                <option>Warthog</option>
                <option>Banshee</option>
                <option>Steve</option>
                <option>Other</option>
            </select>
        </div>
        <div>
            <input type="submit" class="btn btn-outline-success btn-block" value="Create Your Profile!" />
        </div>
    </form>
    <br />
</body>