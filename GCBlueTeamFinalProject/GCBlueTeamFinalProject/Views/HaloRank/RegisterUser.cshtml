<body>

    @{
        ViewData["Title"] = "RegisterUser";
        Layout = "~/Views/HaloRank/_RegisterUserLayout.cshtml";
    }

    <h1>Profile Registration Page</h1>

        @if (ViewBag.Message != null)
        {
            <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
            </script>

        }

    <h4>Welcome to the Halo Rankings App! Before you get started we just need a bit more information.</h4> <br />

    <form action="../HaloRank/CreateProfile" method="post">
        @*Profile Image
        <input type="image" name="Images" value="" /><br /><br />*@

        <h6><b>Gamertag</b></h6>
        <input type="text" name="GamerTag" value="" required/><br /><br />
        <h6><b>Name</b></h6>
        <input type="text" name="UserName" value="" required/><br /><br />
        <h6><b>Date of Birth</b></h6>
        <input type="date" name="DoB" value="" /><br /><br />
        <h6><b>Gender</b></h6>
        <input type="text" name="Gender" value="" /><br /><br />
        <input type="submit" class="btn btn-success" value="Create Your Profile!" /><br />
    </form>
    <br />
    <p>If you don't have a gamertag, try one from this list</p>
    <ul>
        <li><p>Star Forge 7</p></li>
        <li><p>Powered Plant</p></li>
        <li><p>blody09</p></li>
        <li><p>Herro Tommy</p></li>
        <li><p>Crarazy</p></li>
    </ul>


</body>