@{
    ViewData["Title"] = "RegisterUser";
    Layout = "~/Views/HaloRank/_RegisterUserLayout.cshtml";
}

<body class="view" style="
        background-image: url('../img/clouds.png');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;">
</body>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}
<br />
<div class="card-transparent " style="background-color: rgba(255, 255, 255, 0.60); padding: 50px;">
    <div class="row">
        <div class="col">
            <h1 class="text-center">Welcome to Halo Arena Matchup!</h1>
        </div>
    </div>
    <br />
    <br />
    <div class="row">
        <form action="../HaloRank/CreateProfile" method="post" class="col">
            <div class="form-group">
                <label for="gamertaginput">Enter your gamertag, or try "<b>Spectacle</b>" if you don't have one</label>
                <input type="text" class="form-control" name="Gamertag" value="" id="gamertaginput" placeholder="Gamertag" required />
            </div>
            <div class="form-group">
                <label for="nameinput">Name</label>
                <input type="text" class="form-control" name="UserName" value="" id="nameinput" placeholder="Name" required />
            </div>
            <div class="form-group">
                <label for="genderinput">Species</label>
                <select class="form-control" name="Gender" id="genderinput">
                    <option>Human</option>
                    <option>Grunt</option>
                    <option>Warthog</option>
                    <option>Banshee</option>
                    <option>Steve</option>
                    <option>Other</option>
                </select>
            </div>
            <div class="form-group">
                <label for="dateinput">Birthday</label>
                <input type="date" class="form-control" name="DoB" value="" id="dateinput" />
            </div>
            <div>
                <input type="submit" class="btn btn-outline-success btn-block" value="Create Your Profile!" />
            </div>
        </form>
        <div class="col" style="text-align:center">
            <img src="~/img/Halo3_ODST_Sgt._Johnson.png" style="max-height:382px" />
        </div>
    </div>
</div>
<br />
