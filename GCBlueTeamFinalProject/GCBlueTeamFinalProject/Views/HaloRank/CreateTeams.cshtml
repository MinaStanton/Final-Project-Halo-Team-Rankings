
@{
    ViewData["Title"] = "CreateTeams";
}
@model List<Teams>

<h1>Red vs Blue</h1>


<div class="row">

    @for (int i = 0; i < Model.Count - 1; i++)
    {
    <div class="col-sm-6 col-lg-5" style="color:red">
        <p>@Model[i].TeamName</p>
        <p>@Model[i].Player1</p>
        <p>@Model[i].Player2</p>
        <p>@Model[i].Player3</p>
        <p>@Model[i].Player4</p>
        <p>@Model[i].Player5</p>
        <p>@Model[i].Player6</p>
        <p>@Model[i].Player7</p>
        <p>@Model[i].Player8</p>
