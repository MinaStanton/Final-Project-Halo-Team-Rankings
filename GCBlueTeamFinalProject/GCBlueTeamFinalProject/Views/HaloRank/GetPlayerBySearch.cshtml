
@{
    ViewData["Title"] = "GetPlayerBySearch";
}

<h1>GetPlayerBySearch</h1>
@model PlayerRootObject


<table class=" table table-dark">
    <tr>
        <th>Gamertag</th>
        <th>Total Kills</th>
        <th>Total Deaths</th>
        <th>Total Assists</th>
        <th>Total Assassinations</th>
        <th>Total Headshots</th>
        <th>Total Shots Fired</th>
        <th>Total Shots Landed</th>
        <th>Total Games Won</th>
        <th>Total Games Lost</th>
        <th>Total Games Tied</th>
        <th>Total Games Completed</th>
        <th>Total Time Played</th>
        <th>Game Type Id</th>
    </tr>

    <tr>

        <td>@Model.Results[0].Result.PlayerId.Gamertag</td>
        <td>@Model.Results[0].Result.ArenaStats.TotalKills</td>
        <td>@Model.Results[0].Result.ArenaStats.TotalDeaths</td>
        <td>@Model.Results[0].Result.ArenaStats.TotalAssists</td>
        <td>@Model.Results[0].Result.ArenaStats.TotalAssassinations</td>
        <td>@Model.Results[0].Result.ArenaStats.TotalHeadshots</td>
        <td>@Model.Results[0].Result.ArenaStats.TotalShotsFired</td>
        <td>@Model.Results[0].Result.ArenaStats.TotalShotsLanded</td>
        <td>@Model.Results[0].Result.ArenaStats.TotalGamesWon</td>
        <td>@Model.Results[0].Result.ArenaStats.TotalGamesLost</td>
        <td>@Model.Results[0].Result.ArenaStats.TotalGamesTied</td>
        <td>@Model.Results[0].Result.ArenaStats.TotalGamesCompleted</td>
        <td>@Model.Results[0].Result.ArenaStats.TotalTimePlayed</td>
        <td>@Model.Results[0].Result.ArenaStats.ArenaGameBaseVariantStats[2].GameBaseVariantId</td>
    </tr>

</table>

<form action="../HaloRank/AddToGamers" method="post">
    <input type="hidden" name="Gamertag" value="@Model.Results[0].Result.PlayerId.Gamertag" />
    <input type="hidden" name="TotalKills" value="@Model.Results[0].Result.ArenaStats.TotalKills" />
    <input type="hidden" name="TotalDeaths" value="@Model.Results[0].Result.ArenaStats.TotalDeaths" />
    <input type="hidden" name="TotalAssists" value="@Model.Results[0].Result.ArenaStats.TotalAssists" />
    <input type="hidden" name="TotalAssassinations" value="@Model.Results[0].Result.ArenaStats.TotalAssassinations" />
    <input type="hidden" name="TotalHeadshots" value="@Model.Results[0].Result.ArenaStats.TotalHeadshots" />
    <input type="hidden" name="TotalShotsFired" value="@Model.Results[0].Result.ArenaStats.TotalShotsFired" />
    <input type="hidden" name="TotalShotsLanded" value="@Model.Results[0].Result.ArenaStats.TotalShotsLanded" />
    <input type="hidden" name="TotalGamesWon" value="@Model.Results[0].Result.ArenaStats.TotalGamesWon" />
    <input type="hidden" name="TotalGamesLost" value="@Model.Results[0].Result.ArenaStats.TotalGamesLost" />
    <input type="hidden" name="TotalGamesTied" value="@Model.Results[0].Result.ArenaStats.TotalGamesTied" />
    <input type="hidden" name="TotalGamesCompleted" value="@Model.Results[0].Result.ArenaStats.TotalGamesCompleted" />
    <input type="hidden" name="TotalTimePlayed" value="@Model.Results[0].Result.ArenaStats.TotalTimePlayed" />
    <input type="hidden" name="GameTypeNvarCharId" value="@Model.Results[0].Result.ArenaStats.ArenaGameBaseVariantStats[2].GameBaseVariantId" />
    <input type="hidden" name="UserID" value="@ViewBag.UserId" />
    <input type="submit" value="Add to friends list" />
</form>