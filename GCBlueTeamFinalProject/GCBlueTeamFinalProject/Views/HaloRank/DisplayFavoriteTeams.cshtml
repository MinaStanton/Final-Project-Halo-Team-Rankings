
@{
    ViewData["Title"] = "DisplayFavoriteTeams";
    Layout = "~/Views/HaloRank/_DisplayFavoriteTeamsLayout.cshtml";
}
@model List<Teams>

<body class="view" style="
        background-image: url('../img/h3_mpalpha_snowboundcarnage.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;">
</body>
<br />
<div class="form-row">
    <div class="col">
        <h1 class="text-white">Favorite Teams</h1>
    </div>
    <form action="../HaloRank/GetPlayerBySearch" method="post" class="col">
        <div class="form-row">
            <div class="col">
                <input type="text" name="search" value="" class="form-control" placeholder="Search Gamertag" required />
            </div>
            <div class="col">
                <input type="submit" value="Search Gamertag" class="btn btn-primary btn-block" />
            </div>
            <div class="col">
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Try This Gamertag
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="../HaloRank/GetPlayerBySearch?search=Star Forge 7">Star Forge 7</a>
                        <a class="dropdown-item" href="../HaloRank/GetPlayerBySearch?search=Powered Plant">Powered Plant</a>
                        <a class="dropdown-item" href="../HaloRank/GetPlayerBySearch?search=blody09">blody09</a>
                        <a class="dropdown-item" href="../HaloRank/GetPlayerBySearch?search=Herro Tommy">Herro Tommy</a>
                        <a class="dropdown-item" href="../HaloRank/GetPlayerBySearch?search=Crarazy">Crarazy</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<br />
<br />

<style>
    th {
        white-space: nowrap;
    }
</style>
<div class="card-transparent" style="background-color: rgba(11, 12, 12, 0.68)">
    <div class="card-body align-items-center d-flex justify-content-center" style="color:white">
        <table class="table table-striped table-responsive" style="color:white">

            <tr>
                <th>Team</th>
                @for (int i = 1; i <= ViewBag.teamMembers; i++)
                {

                    <th>Player @i </th>
                }
                <th>Win/Loss Ratio</th>
                <th>Kill/Deaths Ratio</th>
                <th>Kill/Death/Assists Ratio</th>
                <th>Accuracy Ratio</th>
                <th>Score</th>
                <th></th>
            </tr>

            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].TeamName</td>

                    @if (ViewBag.teamMembers == 8)
                    {
                        <td id="aligntextintd">@Model[i].Player1</td>
                        <td id="aligntextintd">@Model[i].Player2</td>
                        <td id="aligntextintd">@Model[i].Player3</td>
                        <td id="aligntextintd">@Model[i].Player4</td>
                        <td id="aligntextintd">@Model[i].Player5</td>
                        <td id="aligntextintd">@Model[i].Player6</td>
                        <td id="aligntextintd">@Model[i].Player7</td>
                        <td id="aligntextintd">@Model[i].Player8</td>
                        <td id="aligntextintd">@Model[i].AvgWlratio%</td>
                        <td id="aligntextintd">@Model[i].AvgKdratio</td>
                        <td id="aligntextintd">@Model[i].AvgKdaratio</td>
                        <td id="aligntextintd">@Model[i].AvgAccRatio%</td>
                        <td id="aligntextintd">@Model[i].AvgScore</td>
                    }
                    else if (ViewBag.teamMembers == 6)
                    {
                        <td id="aligntextintd">@Model[i].Player1</td>
                        <td id="aligntextintd">@Model[i].Player2</td>
                        <td id="aligntextintd">@Model[i].Player3</td>
                        <td id="aligntextintd">@Model[i].Player4</td>
                        <td id="aligntextintd">@Model[i].Player5</td>
                        <td id="aligntextintd">@Model[i].Player6</td>
                        <td id="aligntextintd">@Model[i].AvgWlratio%</td>
                        <td id="aligntextintd">@Model[i].AvgKdratio</td>
                        <td id="aligntextintd">@Model[i].AvgKdaratio</td>
                        <td id="aligntextintd">@Model[i].AvgAccRatio%</td>
                        <td id="aligntextintd">@Model[i].AvgScore</td>
                    }
                    else if (ViewBag.teamMembers == 4)
                    {
                        <td id="aligntextintd">@Model[i].Player1</td>
                        <td id="aligntextintd">@Model[i].Player2</td>
                        <td id="aligntextintd">@Model[i].Player3</td>
                        <td id="aligntextintd">@Model[i].Player4</td>
                        <td id="aligntextintd">@Model[i].AvgWlratio%</td>
                        <td id="aligntextintd">@Model[i].AvgKdratio</td>
                        <td id="aligntextintd">@Model[i].AvgKdaratio</td>
                        <td id="aligntextintd">@Model[i].AvgAccRatio%</td>
                        <td id="aligntextintd">@Model[i].AvgScore</td>
                    }
                    else
                    {
                        <td id="aligntextintd">@Model[i].Player1</td>
                        <td id="aligntextintd">@Model[i].Player2</td>
                        <td id="aligntextintd">@Model[i].AvgWlratio%</td>
                        <td id="aligntextintd">@Model[i].AvgKdratio</td>
                        <td id="aligntextintd">@Model[i].AvgKdaratio</td>
                        <td id="aligntextintd">@Model[i].AvgAccRatio%</td>
                        <td id="aligntextintd">@Model[i].AvgScore</td>
                    }
                    <td><a href="../HaloRank/DeleteFavoriteTeams?id=@Model[i].Id" class="btn btn-danger">Remove</a></td>
                </tr>
            }

        </table>
    </div>
</div>

            @if (ViewBag.Message != null)
            {
                <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
                </script>

            }
